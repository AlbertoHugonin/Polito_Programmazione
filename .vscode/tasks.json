{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc-7 build active file",
			"command": "/usr/bin/gcc-7",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-I${workspaceFolder}/Algoritmi"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"windows": {
				"command": "C:\\TDM-GCC-64\\bin\\gcc.exe"
			  },
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}